<configuration>
    <appender name="logstash" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <jsonGeneratorDecorator class="com.github.skjolber.decorators.SyntaxHighlightingDecorator">
                <syntaxHighlighterFactory class="com.github.skjolber.decorators.factory.TraceContextSyntaxHighlighterFactory">
                    <traceContext>
                        <spanId>highIntensity cyan</spanId>
                        <parentSpanId>highIntensity magenta</parentSpanId>
                        <traceId>highIntensity blue</traceId>
                    </traceContext>
                </syntaxHighlighterFactory>
            </jsonGeneratorDecorator>
        </encoder>

    </appender>

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg {%mdc}%n</pattern>
        </encoder>
    </appender>

    <logger name="com.spike.consumer" level="debug" additivity="false">
        <appender-ref ref="logstash"/>
    </logger>

    <root level="info">
        <appender-ref ref="logstash"/>
    </root>


</configuration>
